#include<iostream>
using namespace std;

int main()
{    
	int n,i,m , min ;
	int *a = new int[n];
	cout<<"Enter the size of array: ";
	cin>>n;
	cout<<"Enter "<<n<<" elements: ";
	for(i=0; i<n; i++)
	{ 
	   cin>>a[i];
	}
		
	cout<<"Elements are: ";
	for(i=0; i<n; i++)
	{ 
	   cout<<a[i]<<" ";
    }
    
   min = a[0];
    for(i=1; i<n; i++)
    {
    	if(min>a[i])
    		min=a[i];
	}
    cout<<"\nMinimum element is: "<<min;    
    return 0;
}
